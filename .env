# voiceFlow STT runtime options
# base model/cache root (project-relative)
WHISPER_MODEL_DIR=./models

# backend: ct2 | hf_generate | hf_pipeline
VOICEFLOW_STT_BACKEND=ct2

# model alias or HF id (UI model selector initial value)
VOICEFLOW_STT_MODEL=large-v3

# explicit local model directory (optional)
VOICEFLOW_STT_MODEL_PATH=

# device: auto | cuda | cpu
VOICEFLOW_STT_DEVICE=auto

# fp16 preference
VOICEFLOW_STT_FP16=true

# language: auto/none for auto-detect, or fixed language code like ko/en
#VOICEFLOW_STT_LANGUAGE=auto
VOICEFLOW_STT_LANGUAGE=ko

# task: transcribe | translate
VOICEFLOW_STT_TASK=transcribe

# ct2 beam size
VOICEFLOW_STT_BEAM_SIZE=5

# decode temperature (0.0 = deterministic)
VOICEFLOW_STT_TEMPERATURE=0.0

# ct2 backend VAD filter
VOICEFLOW_STT_CT2_VAD_FILTER=false

# worker/mic defaults
VOICEFLOW_STT_CHUNK_SEC=3.0
VOICEFLOW_STT_SAMPLERATE=16000


AUDIOMI_HOST=127.0.0.1
AUDIOMI_PORT=26070
AUDIOMI_CHECKCODE=20250918

ENABLE_LOGGING=true

# ------------------------------
# NeuroFlow integrated demo (main.py)
# ------------------------------
# Unified A/V device path
# - set once, camera uses this path directly
# - mic device auto-matches by camera name when MIC_DEVICE is empty
DEVICE_PATH=\\?\usb#vid_1bcf&pid_28c4&mi_00#b&1da11eb4&0&0000#{65e8773d-8f56-11d0-a3b9-00a0c9223196}\global

# Camera selection (DEVICE_PATH 우선)
#CAMERA_ID=0
#CAMERA_DEVICE_PATH=\\?\usb#vid_1bcf&pid_28c4&mi_00#b&1da11eb4&0&0000#{65e8773d-8f56-11d0-a3b9-00a0c9223196}\global
# Resolution (preferred): WxH, e.g. 640x480 / 1280x720 / 1920x1080
# High resolution significantly lowers FPS when face+pose are both enabled.
CAMERA_RESOLUTION=640x480
# Fallback when CAMERA_RESOLUTION is empty
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
# Top camera viewport ratio (0.35 ~ 0.75, default 0.52)
CAMERA_TOP_RATIO=0.52
CAMERA_USE_DSHOW=true

# Detection counts
MAX_FACE=1
MAX_POSE=1

# Microphone selection for webcam mic
# - number: sounddevice input index (recommended for fixed device binding)
# - string: exact device name
# - empty: auto match from DEVICE_PATH
#MIC_DEVICE=
MIC_SAMPLERATE=16000
MIC_BLOCKSIZE=1024

# Optional model path overrides for vision workers
FACE_MODEL_PATH=models/blaze_face_short_range.tflite
FACE_LANDMARK_MODEL_PATH=models/face_landmarker.task
POSE_MODEL_PATH=models/pose_landmarker_lite.task

# Accumulate ASR tuning
ASR_STEP_S=1.5
ASR_MAX_WINDOW_S=25
